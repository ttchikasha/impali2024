<%= bootstrap_form_with(model: [result.student, result]) do |form| %>
  <%= render 'shared/form_alert', resource: result %>
  <%= form.text_field :name, floating: true, help: 'e.g. Paper 1' %>
  <div class="row">
    <div class="col-md-3">
      <%= form.select :classroom_subject_id,
         current_user.classroom_subjects.select{|cs| result.student.classroom_subjects.include?(cs) }.map {|cs| [cs.subject.name, cs.id]}, 
          floating: true, label: 'Subject' %>
    </div>
    <div class="col-md-3">
      <%= form.select :for, Result.fors.keys, floating: true %>
    </div>
    <div class="col-md-3">
      <%= form.number_field :year, floating: true, in: 2000..Date.today.year %>
    </div>
    <div class="col-md-3">
      <%= form.select :term, Result.terms.keys, floating: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.number_field :actual_mark, floating: true %>
    </div>
    <div class="col-md-6">
      <%= form.number_field :total_marks, floating: true %>
    </div>
  </div>
  <%= form.primary %>
<% end %>
