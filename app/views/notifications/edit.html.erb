<div class="section-title mt-3">
  <p>
    <i class="bi bi-<%= @notification.icon %> text-<%= @notification.tag %>"></i>
    <%= @notification.title %>
  </p>
  <h2>Edit Notification</h2>
</div>
<div class="card">
  <div class="card-body">
    <h3 class="card-title fw-bold">Fill the form below to update this notification</h3>
