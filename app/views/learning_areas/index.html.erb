<section id="services" class="services">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="d-flex align-items-start">
        <div class="nav flex-column nav-pills me-3" style="position: sticky; top: 10px;" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <button class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">Infants</button>
          <button class="nav-link" id="v-pills-juniors-tab" data-bs-toggle="pill" data-bs-target="#v-pills-juniors" type="button" role="tab" aria-controls="v-pills-juniors" aria-selected="true">Juniors</button>
          <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">Sports</button>
          <button class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-messages" type="button"
                  role="tab" aria-controls="v-pills-messages" aria-selected="false">Other
          </button>
        </div>
        <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            <section id="services" class="services pt-0">
              <div class="container">
                <div class="section-title mt-4 text-start mb-0 pb-0">
                  <h2 class="mb-0">Infants Learning Areas</h2>
                </div>
                <div class="row">
                  <% @infant_subjects.each_with_index do |subject, i| %>
                    <div class="col-lg-3 col-md-4 d-flex align-items-stretch mt-4" data-aos="zoom-in" data-aos-delay="<%= i * 80 %>">
                      <div class="border w-100 d-flex"><%= render_learning_area subject[:name], subject[:icon] %></div>
                    </div>
                  <% end %>
                </div>
              </div>
            </section>
          </div>
          <div class="tab-pane fade" id="v-pills-juniors" role="tabpanel" aria-labelledby="v-pills-juniors-tab">
            <section id="services" class="services pt-0">
              <div class="container">
                <div class="section-title mt-4 text-start mb-0 pb-0">
                  <h2 class="mb-0">Juniors Learning Areas</h2>
                </div>
                <div class="row">
                  <% @junior_subjects.each_with_index do |subject, i| %>
                    <div class="col-lg-3 col-md-4 d-flex align-items-stretch mt-4" data-aos="zoom-in" data-aos-delay="<%= i * 80 %>">
                      <div class="border w-100 d-flex"><%= render_learning_area subject[:name], subject[:icon] %></div>
                    </div>
                  <% end %>
                </div>
              </div>
            </section>
          </div>
          <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
            <section id="services" class="services pt-0">
              <div class="container">
                <div class="section-title mt-4 text-start mb-0 pb-0">
                  <h2 class="mb-0">Sports</h2>
                </div>
                <div class="row">
                  <% @sports.each_with_index do |subject, i| %>
                    <div class="col-lg-3 col-md-4 d-flex align-items-stretch mt-4" data-aos="zoom-in" data-aos-delay="<%= i * 80 %>">
                      <div class="border w-100 d-flex"><%= render_learning_area subject[:name], subject[:icon] %></div>
                    </div>
                  <% end %>
                </div>
              </div>
            </section>
          </div>
          <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
            <section id="services" class="services pt-0">
              <div class="container">
                <div class="section-title mt-4 text-start mb-0 pb-0">
                  <h2 class="mb-0">Extra Curricular Activities</h2>
                </div>
                <div class="row">
                  <% @extra.each_with_index do |name, i| %>
                    <div class="col-lg-4 col-md-4 d-flex align-items-stretch mt-4" data-aos="zoom-in" data-aos-delay="<%= i * 50 %>">
                      <div class="border w-100 d-flex">
                        <div class="icon-box pb-1 pt-2 w-100">
                          <h4><a href=""><%= name %></a></h4>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
