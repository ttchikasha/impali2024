<div class="d-flex justify-content-between align-items-center">
  <div class="card-title">Question <%= question.number %></div>
  <div>
    <% if question.owned_by?(current_user) && !local_assigns[:locals]&.fetch(:readonly) %>
      <%= link_to edit_assignment_question_path(question.questionable, question), class: 'btn btn-outline-info btn-sm' do %>
        <i class="bi bi-pencil-square"></i>
      <% end %>
      <%= link_to assignment_question_path(question.questionable, question), method: :delete, data: {confirm: 'Are you sure'}, class: 'btn btn-sm btn-outline-danger ms-2' do %>
        <i class="bi bi-trash"></i>
      <% end %>
    <% end %>
  </div>
</div>
<div class="mb-3"><%= question.text %></div>
