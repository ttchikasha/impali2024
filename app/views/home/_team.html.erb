<!-- ======= Team Section ======= -->
<section id="team" class="team" style="padding-bottom: 20px;">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2>Our Staff</h2>
      <p>Meet our school staff. Our staff is dedicated to inspiring and empowering students to learn</p>
    </div>
    <div class="row team-container">
      <% @staff.each.with_index do |staff_member, index| %>
        <div class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="<%= [(index + 1) * 100, 500].max %>">
          <%= staff_member(image: staff_member[:image], name: staff_member[:name], position: staff_member[:position]) %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<section class="section-bg py-3 mb-0">
  <div class="container d-flex justify-content-center">
    <%= link_to "View All Teachers And Staff", staff_path,
                class: 'text-center text-decoration-none text-lowercase w-100 rounded-0' %>
  </div>
</section>
<!-- End Team Section -->
