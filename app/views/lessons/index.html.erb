<p id="notice"><%= notice %></p>
<h1>Lessons</h1>
<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Title</th>
      <th>Video url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% cache @lessons do %>
      <% @lessons.each do |lesson| %>
        <% cache lesson do %>
          <tr>
            <td><%= lesson.topic_id %></td>
            <td><%= lesson.title %></td>
            <td><%= lesson.video_url %></td>
            <td><%= link_to 'Show', lesson %></td>
            <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
            <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Lesson', new_lesson_path %>
