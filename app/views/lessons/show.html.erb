<link href="https://vjs.zencdn.net/7.17.0/video-js.css" rel="stylesheet" />
<div class="section-title">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
    <p><%= @lesson.title %></p>
    <% if current_user.teacher? %>
      <div class="d-flex align-items-center">
        <%= link_to 'Edit Lesson', edit_topic_lesson_path(@topic, @lesson) , class: 'btn btn-sm btn-outline-success' %>
        <span class="mx-2"></span>
        <%= link_to 'Delete Lesson', topic_lesson_path(@topic, @lesson), class: 'btn btn-outline-danger btn-sm', method: :delete, data: {confirm: 'Are you sure'} %>
      </div>
    <% end %>
  </div>
  <h2 class='d-none d-md-block'><%= @lesson.topic.title %> - Lesson <%= @lesson.order %></h2>
</div>
<h2 class="h6 text-secondary d-md-none"><%= @lesson.topic.title %> - Lesson <%= @lesson.order %></h2>
<div class="mt-2 mb-3">
  <% if @lesson.video_url && !@lesson.video_url.nil? && !@lesson.video_url.blank? %>
    <%= embed(@lesson.video_url, {width: '100%', height: '400px'}).html_safe %>
  <% end %>
</div>
<div class="lesson-content">
  <%= @lesson.content %>
</div>
<script src="https://vjs.zencdn.net/7.17.0/video.min.js"></script>
