<h2>Sign up</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", floating: true %>
  <%= f.password_field :password, autocomplete: "new-password", floating: true, help: @minimum_password_length ? + "#{ @minimum_password_length} characters minimum" : nil  %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", floating: true %>
  <%= f.primary "Sign up" %>
<% end %>
<%= render "devise/shared/links" %>
