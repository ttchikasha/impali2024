<h2>Edit <%= resource_name.to_s.humanize %> Password</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.password_field :password, autocomplete: "new-password", floating: true, label: 'New Password', required: true %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", floating: true, help: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil %>
  <%= f.password_field :current_password, autocomplete: "current-password", floating: true, help: "we need your current password to confirm your changes" %>
  <%= f.primary "Update" %>
<% end %>
<br>
