<h2>Change your password</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", floating: true, help: "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", floating: true %>
  <%= f.primary "Change my password" %>
<% end %>
<%= render "devise/shared/links" %>
