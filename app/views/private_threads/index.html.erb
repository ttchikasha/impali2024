<p id="notice"><%= notice %></p>

<h1>Private Threads</h1>

<table>
  <thead>
    <tr>
      <th>User1</th>
      <th>User2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @private_threads.each do |private_thread| %>
      <tr>
        <td><%= private_thread.user1_id %></td>
        <td><%= private_thread.user2_id %></td>
        <td><%= link_to 'Show', private_thread %></td>
        <td><%= link_to 'Edit', edit_private_thread_path(private_thread) %></td>
        <td><%= link_to 'Destroy', private_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

