<%= bootstrap_form_with(model: [topic.classroom_subject, topic]) do |form| %>
  <%= render 'shared/form_alert', resource: topic %>
  <%= form.text_field :title, floating: true %>
  <%= form.text_area :description, floating: true, rows: '4', control_class: 'form-control h-100' %>
  <%= form.primary %>
<% end %>
