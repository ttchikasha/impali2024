<div class="section-title">
  <div class="d-flex align-items-center justify-content-between">
    <p><%= current_user.classroom.name %></p>
    <% if current_user.teacher? %>
      <%= link_to 'New Assignment', new_classroom_subject_assignment_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
  <h2><%= @classroom_subject.name %> Assignments</h2>
</div>
<div class="events">
  <div class="row">
    <%= render @assignments %>
  </div>
</div>
