<div class="section-title">
  <div class="d-flex justify-content-between align-items-center">
    <p><%= @classroom_subject.name %></p>
    <p><%= @classroom_subject.classroom.name %></p>
  </div>
</div>
<% if @classroom_subject.assignments.any? %>
  <div class="section-title">
    <h2>Recent Assignments</h2>
  </div>
  <div class="events">
    <div class="row">
      <% cache @classroom_subject.recent_assignments do %>
        <%= render @classroom_subject.recent_assignments %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="section-title">
  <% if @classroom_subject.assignments.any? %>
    <p>Lessons</p>
  <% end %>
  <h2>Recent Lessons</h2>
</div>
<div class="courses">
  <div class="row">
    <% cache @classroom_subject.recent_lessons do %>
      <%= render @classroom_subject.recent_lessons %>
    <% end %>
  </div>
</div>
